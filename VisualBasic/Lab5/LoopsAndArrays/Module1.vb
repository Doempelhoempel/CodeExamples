Module Module1

    Sub Main()

        '//////////////////////////////////////////////////////////////////////
        '//////////////////////////////////////////////////////////////////////

        Dim people(2) As Person
        people(0) = New Person("Donnie", 36)
        people(1) = New Person("Michael", 28)
        people(2) = New Person("Alana", 42)

        '//////////////////////////////////////////////////////////////////////
        '//////////////////////////////////////////////////////////////////////

        For i = 0 To 2
            Console.WriteLine(people(i).Name & ", " & people(i).Age)
        Next

        '//////////////////////////////////////////////////////////////////////
        '//////////////////////////////////////////////////////////////////////

        For Each person As Person In people
            Console.WriteLine(person.Name & ", " & person.Age)
        Next

        '//////////////////////////////////////////////////////////////////////
        '//////////////////////////////////////////////////////////////////////

        Dim j As Integer = 0

        Do While j < 3
            Console.WriteLine(people(j).Name & ", " & people(j).Age)
            j = j + 1
        Loop

        '//////////////////////////////////////////////////////////////////////
        '//////////////////////////////////////////////////////////////////////

        Console.ReadKey()

    End Sub

End Module